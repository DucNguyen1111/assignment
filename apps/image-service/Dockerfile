# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build image-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t image-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system image-service && \
          adduser --system -G image-service image-service

COPY dist/apps/image-service image-service/
RUN chown -R image-service:image-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix image-service --omit=dev -f install

CMD [ "node", "image-service" ]
